% Put the logo in each slide's top left area
\setbeamertemplate{headline}{\hspace{0.06\textwidth}\pgfuseimage{\@logo}}

% Define frame title and subtitle layout
\setbeamertemplate{frametitle}{%
  \vspace*{-5ex} % MODIFIER ICI <- $*$
